@model MyTube.BLL.BusinessEntities.ChannelProxy

@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
{
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Upload", "UploadVideo", "Video", null, new { @class = "btn btn-default auth-items" })
        </li>
        <li>
            <a href="#" class="auth-items">
                <span class="glyphicon-bell"></span>
            </a>
        </li>
        <li>
            <a href="" class="nav-link dropdown-toggle avatar" id="supportedContentDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img id="channelAvatar" src="@Url.Content(@Model.AvatarUri)" class="profile-image img-circle avatar" />
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Profile", "Edit", "Profile")</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        </li>
    </ul>
}